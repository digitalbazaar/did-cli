      _setupTypeCommand(yargs);
      _setupDidCommand(yargs);
      _setupRemoteCommand(yargs);
      _setupAcceleratorCommand(yargs);
      _setupRegisterCommand(yargs);
      _setupExamples(yargs, 'authn-rotate');
      yargs
