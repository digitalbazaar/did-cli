'use strict';

const didCli = require('.');
const yargs = require('yargs');

// run the program
main();

async function main() {
  const cli = yargs
    .usage('Usage: $0 <command>')
    .option('config', {
      describe: 'Configuration file path.',
      alias: 'c',
    })
    .demandCommand(1, 'Please specify a command to execute.');

  didCli.key.command(cli);
  didCli.id.command(cli);

  cli.argv;
}
